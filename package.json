{
  "name": "ghostty-ansi-html",
  "module": "index.ts",
  "version": "0.0.2", 
  "main": "./dist/index.js", 
  "type": "module",
  "devDependencies": {
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "scripts": {
    "build:lib": "cd lib && zig build -Doptimize=Debug && cp -rvf zig-out/lib/* ../dist/",
    "build": "bun build --target=bun ./src/index.ts --outdir ./dist && npm run build:lib"
  }
}
